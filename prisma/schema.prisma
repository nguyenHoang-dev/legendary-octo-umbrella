generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Student
  CanSu
  QuanTri
  Admin
}

enum TrangThaiThamGia {
  cho_duyet
  da_duyet
  tu_choi
}

// =======================================================
// 1. BẢNG LỚP HỌC (Lop)
// =======================================================
model Lop {
  id_lop       Int        @id @default(autoincrement())
  ten_lop      String     @unique @db.VarChar(50)
  khoa         String?    @db.VarChar(100)
  SinhVien     SinhVien[]
  quanTri      QuanTri    @relation(fields: [quanTriMa_qt], references: [ma_qt])
  quanTriMa_qt String     @db.VarChar(20)
}

// =======================================================
// 2. BẢNG HỌC KỲ (HocKy)
// =======================================================
model HocKy {
  id_hoc_ky     Int       @id @default(autoincrement())
  // ten_hoc_ky      String    @unique @db.VarChar(100)
  ngay_bat_dau  DateTime? @db.Date
  ngay_ket_thuc DateTime? @db.Date

  HoatDong     HoatDong[]
  DiemRenLuyen DiemRenLuyen[]
}

